<Window x:Class="CW_Underground.ViolationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW_Underground"
        mc:Ignorable="d"
        Title="Violation" Height="320" Width="500" Background="Gainsboro" ResizeMode="NoResize">
    <Grid>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="208" Margin="10,10,0,0" VerticalAlignment="Top" Width="465" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="getBT" Content="Get" HorizontalAlignment="Left" Margin="95,223,0,0" VerticalAlignment="Top" Width="150" Click="getBT_Click" Height="51" FontFamily="Impact" FontSize="20" Foreground="SlateGray"/>
        <Button x:Name="cancelBT" Content="Cancel" HorizontalAlignment="Left" Margin="245,223,0,0" VerticalAlignment="Top" Width="150" Click="cancelBT_Click" Height="51" FontFamily="Impact" FontSize="20" Foreground="SlateGray"/>

    </Grid>
</Window>
